<!DOCTYPE html>
<html lang="it">

<head>
    <title>
        <%= title %>
    </title>
    <meta charset="UTF-8">
    <!-- to be responsive to mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-png" href="img/logo.png" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS personalizzato -->
    <link rel="stylesheet" href="css/style.css">
    <!-- bootstap scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="js/angular.js"></script>
</head>

<body ng-app="appStudente" ng-controller="controllerStudente">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div>
                    <h3 class="text-center">Benvenuti
                        <%= user.nome %>.</h3>
                    <div>
                        <ul class="list-unstyled">
                            <li>Username:
                                <%= user.username %>
                            </li>
                            <li>Email:
                                <%= user.email %>
                            </li>
                            <li>Nome:
                                <%= user.nome %>
                            </li>
                            <li>Cognome:
                                <%= user.cognome %>
                            </li>
                            <li>Matricola:
                                <%= user.matricola %>
                            </li>
                            <li>Email Universitaria:
                                <%= user.emailUniversitaria %>
                            </li>
                        </ul>
                    </div>
                    <a href="/logout" class="btn btn-lg btn-danger btn-block">Log Out</a>
                </div>
            </div>
        </div>
        <div class="row">
            <% if (tuoiCorsi.length > 0) { %>
                <h4 class="text-center">Piano studi
                    <%= user.codFacoltÃ  %>
                </h4>
                <div class="row">
                    <h5 class="col-md-3">Nome:</h5>
                    <h5 class="col-md-3">Codice:</h5>
                    <h5 class="col-md-3">Matricola Docente:</h5>
                    <h5 class="col-md-2">CFU:</h5>
                    <h5 class="col-md-1">Anno:</h5>
                </div>
                <% for(var i=0; i < tuoiCorsi.length; i++) { %>
                    <div class="col-md-3">
                        <p>
                            <%= tuoiCorsi[i].nome %>
                        </p>
                    </div>
                    <div class="col-md-3">
                        <p>
                            <%= tuoiCorsi[i].codice %>
                        </p>
                    </div>
                    <div class="col-md-3">
                        <p>
                            <%= tuoiCorsi[i].matricolaP %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= tuoiCorsi[i].cfu %>
                        </p>
                    </div>
                    <div class="col-md-1 text-center">
                        <p>
                            <%= tuoiCorsi[i].anno %>
                        </p>
                    </div>
                    <% } %>
                        <% } %>
        </div>

        <div class="row">
            <% if (corsiAnnuali.length > 0) { %>
                <h4 class="text-center">Piano studi anno
                    <%= user.annoCorso %>
                </h4>
                <div class="row">
                    <h5 class="col-md-3">Nome:</h5>
                    <h5 class="col-md-3">Codice:</h5>
                    <h5 class="col-md-3">Matricola Docente:</h5>
                    <h5 class="col-md-2">CFU:</h5>
                    <h5 class="col-md-1">Anno:</h5>
                </div>
                <% for(var i=0; i <corsiAnnuali.length; i++) { %>
                    <div class="col-md-3">
                       <button type="button" name="idCorso"  ng-click="Cliccami('<%= corsiAnnuali[i].codice %>')" ng-model="codCorso"> vedi appelli </button>
                        <input hidden value="{{codCorso}}" name="idCorso">
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= corsiAnnuali[i].nome %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= corsiAnnuali[i].codice %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= corsiAnnuali[i].matricolaP %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= corsiAnnuali[i].cfu %>
                        </p>
                    </div>
                    <div class="col-md-1 text-center">
                        <p>
                            <%= corsiAnnuali[i].anno %>
                        </p>
                    </div>
                    <% } %>
                        <% } %>
        </div>
        <div class="row">
            <% if (appelliCorso.length > 0) { %>
                <h4 class="text-center">Date disponibili
                    <%= user.annoCorso %>
                </h4>
                <div class="row">
                    <h5 class="col-md-3">Nome:</h5>
                    <h5 class="col-md-3">Codice:</h5>
                    <h5 class="col-md-3">Matricola Docente:</h5>
                    <h5 class="col-md-2">CFU:</h5>
                    <h5 class="col-md-1">Anno:</h5>
                </div>
                <% for(var i=0; i <appelliCorso.length; i++) { %>
                    <div class="col-md-3">
                        <p>
                            <%= appelliCorso[i].idCorso %>
                        </p>
                    </div>
                    <div class="col-md-3">
                        <p>
                            <%= appelliCorso[i].data %>
                        </p>
                    </div>
                    <div class="col-md-3">
                        <p>
                            <%= appelliCorso[i].matricolaP %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= appelliCorso[i].aula %>
                        </p>
                    </div>
                    <div class="col-md-1 text-center">
                        <p>
                            <%= appelliCorso[i].ora %>
                        </p>
                    </div>
                    <% } %>
                        <% } %>
        </div>
    </div>
</body>

</html>