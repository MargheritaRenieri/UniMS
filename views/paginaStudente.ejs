<!DOCTYPE html>
<html lang="it">

<head>
    <title>
        <%= title %>
    </title>
    <meta charset="UTF-8">
    <!-- to be responsive to mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-png" href="img/logo.png" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS personalizzato -->
    <link rel="stylesheet" href="css/style.css">
    <!-- bootstap scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="js/angular.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div>
                    <h3 class="text-center">Welcome
                        <%= user.nome %>.</h3>
                    <div>
                        <ul class="list-unstyled">
                            <li>Username:
                                <%= user.username %>
                            </li>
                            <li>Email:
                                <%= user.email %>
                            </li>
                            <li>Nome:
                                <%= user.nome %>
                            </li>
                            <li>Cognome:
                                <%= user.cognome %>
                            </li>
                            <li>Matricola:
                                <%= user.matricola %>
                            </li>
                            <li>Email Universitaria:
                                <%= user.emailUniversitaria %>
                            </li>
                        </ul>
                    </div>
                    <a href="/logout" class="btn btn-lg btn-danger btn-block">Log Out</a>
                </div>
            </div>
        </div>
        <div class="row" ng-show="IsVisible1">
            <div class="row">
                <% if()%>
                    <div class="row">
                        <h5 class="col-md-3">Nome:</h5>
                        <h5 class="col-md-3">Cognome:</h5>
                        <h5 class="col-md-3">Stato:</h5>
                        <h5 class="col-md-3">Città:</h5>
                        <h5 class="col-md-3">Cap:</h5>
                        <h5 class="col-md-3">DataDiNascita:</h5>
                        <h5 class="col-md-3">Matricola:</h5>
                        <h5 class="col-md-3">Codice Facoltà:</h5>
                        <h5 class="col-md-3">Email:</h5>
                        <h5 class="col-md-3">Email Universitaria:</h5>
                        <h5 class="col-md-3">Telefono:</h5>
                        <h5 class="col-md-3">Username:</h5>
                        <h5 class="col-md-3">Password:</h5>
                    </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h4 class="text-center">Aggiungi prenotazione ad appello</h4>
                <form action="/paginaStudente/prenotazioneAppello" method="POST">
                    <input type="text" name="username" placeholder="Username" required="required" class="form-control" />
                    <select ng-model="student" class="form-control">  
                        <option value="" disabled selected hidden>Studente</option>
                        <% docentiFacoltà.forEach(function(prof){%>
                            <option value=<%=student.matricola%>> <%= student.u %>  <%= prof.cognome %></option>
                        <% })%>
                </select>
                    <input readonly value="{{student}}" type="text" name="matricola" placeholder="matricola studente" required="required" class="form-control">
                   
                    <button type="submit" class="btn btn-lg btn-success btn-block ">OK</button>
                </form>
            </div>
</body>

</html>