<!DOCTYPE html>
<html lang="it">

<head>
    <title>
        <%= title %>
    </title>
    <meta charset="UTF-8">
    <!-- to be responsive to mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-png" href="img/logo.png" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS personalizzato -->
    <link rel="stylesheet" href="css/style.css">
    <!-- bootstap scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="js/angular.js"></script>
    <script src="js/script.js"></script>
</head>

<body ng-app="appStudente" ng-controller="controllerStudente">
    <div class="contact-section">
        <div class="container">
            <div class="row-fluid">
                <div class="col-sm-12 col-md-4 col-md-offset-4">
                    <form>
                        <div id="contact-form" class="form-container" align="center" data-form-container>
                            <div class="row">
                                <h2 class="text-center"><span>Benvenuto
                                    <strong><%= user.nome %>!</strong></span></h2>
                                <hr />
                                <div class="image" align="center">
                                    <img class="image-circle img-rounded img-responsive" src="img/avatar.png" alt="avatar admin">
                                </div>
                                <div class="col-xs-12" align="center">
                                    <ul class="list-group">
                                        <li class="list-group-item "><strong>Username:</strong>
                                            <%= user.username %>
                                        </li>
                                        <li class="list-group-item"><strong>Email:</strong>
                                            <%= user.email %>
                                        </li>
                                        <li class="list-group-item"><strong>Nome:</strong>
                                            <%= user.nome %>
                                        </li>
                                        <li class="list-group-item"><strong>Cognome:</strong>
                                            <%= user.cognome %>
                                        </li>
                                        <li class="list-group-item"><strong>Matricola:</strong>
                                            <%= user.matricola %>
                                        </li>
                                        <li class="list-group-item"><strong>Email Universitaria:</strong>
                                            <%= user.emailUniversitaria %>
                                        </li>
                                    </ul>
                                </div>
                                <a href="/logout" class="btn btn-sm  btn-info" role="button"><strong>Log Out</strong></a>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        <form>
            <div id="contact-form" class="form-container" align="center" data-form-container>
                <div class="row">
                    <div class="col-md-12 col-sm-75" align="center">
                        <% if (tuoiCorsi.length > 0) { %>
                            <h3 class="text-center"><span>Piano studi
                            <strong><%= user.codFacoltÃ  %></strong></span>
                            </h3>
                            <div class="row">
                                <h5 class="col-md-3">Nome:</h5>
                                <h5 class="col-md-3 text-center"><strong>Codice:</strong></h5>
                                <h5 class="col-md-2 text-center"><strong>Matricola Docente:</strong></h5>
                                <h5 class="col-md-2 text-center"><strong>CFU:</strong></h5>
                                <h5 class="col-md-2 text-center"><strong>Anno:</strong></h5>
                            </div>
                            <% for(var i=0; i < tuoiCorsi.length; i++) { %>
                                <div class="col-md-3">
                                    <p>
                                        <%= tuoiCorsi[i].nome %>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        <%= tuoiCorsi[i].codice %>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        <%= tuoiCorsi[i].matricolaP %>
                                    </p>
                                </div>
                                <div class="col-md-2">
                                    <p>
                                        <%= tuoiCorsi[i].cfu %>
                                    </p>
                                </div>
                                <div class="col-md-1 text-center">
                                    <p>
                                        <%= tuoiCorsi[i].anno %>
                                    </p>
                                </div>
                                <% } %>
                                    <% } %>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-sm-75" align="center">
                        <% if (corsiAnnuali.length > 0) { %>
                            <h3 class="text-center"><span>Piano studi
                               <strong> <%= user.annoCorso %> anno </strong></span></h3>
                            <div class="row">
                                <h5 class="col-md-3"><strong>Nome:</strong></h5>
                                <h5 class="col-md-3 text-center"><strong>Codice:</strong></h5>
                                <h5 class="col-md-3 text-center"><strong>Matricola Docente:</strong></h5>
                                <h5 class="col-md-3 text-center"><strong>CFU:</strong></h5>
                            </div>
                            <% for(var i=0; i < corsiAnnuali.length; i++) { %>
                                <div class="col-md-3">
                                    <p>
                                        <a style="color:black; cursor: pointer" name="idCorso" ng-click="Cliccami('<%= corsiAnnuali[i].codice %>')" ng-model="codCorso">
                                            <%= corsiAnnuali[i].nome %>
                                        </a>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        <%= corsiAnnuali[i].codice %>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        <%= corsiAnnuali[i].matricolaP %>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p>
                                        <%= corsiAnnuali[i].cfu %>
                                    </p>
                                </div>
                                <% } %>
                    </div>
                    <form action="/paginaStudente/vediAppelli" method="POST">
                        <div class="row">
                            <h6 class="col-md-4"><strong>Clicca su un corso per vedere gli appelli disponibili</strong></h6>
                            <div class="col-md-4">
                                <input required="required" readonly value="{{codCorso}}" name="idCorso" class="form-control" placeholder="idCorso">
                            </div>
                            <button type="submit" class="btn btn-md btn-info">Vedi Appelli</button>
                        </div>
                    </form>
                    <% } %>
        </form>
        </div>

        <div class="row">
            <% if (appelliCorso.length > 0) { %>
                <h4 class="text-center"><strong>Date disponibili</strong> </h4>
                <div class="row">
                    <h5 class="col-md-2"><strong>Corso:</strong></h5>
                    <h5 class="col-md-2"><strong>Data:</strong></h5>
                    <h5 class="col-md-2"><strong>Ora:</strong></h5>
                    <h5 class="col-md-2"><strong>Matricola Docente:</strong></h5>
                    <h5 class="col-md-2"><strong>Aula:</strong></h5>
                </div>
                <% for(var i = 0; i < appelliCorso.length; i++) { %>
                    <div class="col-md-2">
                        <form action="/paginaStudente/prenotati" method="POST" onsubmit="confermaPrenotazione()">
                            <button type="submit" class="btn btn-link" title="Prenotati">
                                        <i class="fa fa-plus-circle fa-lg" aria-hidden="true" style="color: red"></i>
                            </button>
                            <input hidden name="idAppello" value="<%= appelliCorso[i]._id %>">
                        </form>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= appelliCorso[i].idCorso %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= appelliCorso[i].data %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= appelliCorso[i].ora %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= appelliCorso[i].matricolaP %>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <p>
                            <%= appelliCorso[i].aula %>
                        </p>
                    </div>
                    <% } %>
                        <form action="/paginaStudente/pulisci" method="POST">
                            <button type="submit" class="btn btn-md btn-info">  Indietro </button>

                        </form>
                        <% } %>
        </div>
        </div>

</body>

</html>