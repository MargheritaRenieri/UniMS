<!DOCTYPE html>
<html lang="it">

<head>
    <title>
        <%= title %>
    </title>
    <meta charset="UTF-8">
    <!-- to be responsive to mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-png" href="/img/logo.png" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS personalizzato -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- bootstap scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="/js/angular.js"></script>
    <script src="/js/script.js"></script>
</head>

<body ng-app="appStudente" ng-controller="controllerStudente">
    <div class="panel">
        <div class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-12">
                        <h2>Dettagli appello</h2>
                    </label>
                </div>
                <% if (appelliCorso.length > 0) { %>
                    <div>
                        <table class="table table-bordered">
                            <tr>
                                <th> </th>
                                <th>Corso: </th>
                                <th>Data: </th>
                                <th>Ora: </th>
                                <th>Matricola Docente: </th>
                                <th>Aula: </th>
                                <th>N. Iscritti: </th>
                            </tr>
                            <% for(var i=0; i < appelliCorso.length; i++) { %>
                                <tr>
                                    <td class="col-md-1">
                                        <form action="/paginaStudente/appelli/prenotati" method="POST" onsubmit="confermaPrenotazione()">
                                            <button ng-disabled="<%= iscrizioni[i] %>" type="submit" class="btn btn-link" title="Prenotati">
                                                            <i class="fa fa-plus-circle fa-lg" aria-hidden="true" style="color: red"></i>
                                                </button>
                                            <input hidden name="idAppello" value="<%= appelliCorso[i]._id %>">
                                        </form>
                                    </td>
                                    <td class="col-md-2">
                                        <%= appelliCorso[i].idCorso %>
                                    </td>
                                    <td class="col-md-2">
                                        <%= appelliCorso[i].data %>
                                    </td>
                                    <td class="col-md-2">
                                        <%= appelliCorso[i].ora %>
                                    </td>
                                    <td class="col-md-2">
                                        <%= appelliCorso[i].matricolaP %>
                                    </td>
                                    <td class="col-md-2">
                                        <%= appelliCorso[i].aula %>
                                    </td>
                                    <td class="col-md-1">
                                        <%= appelliCorso[i].matricolaS.length %>
                                    </td>
                                </tr>
                                <% } %>
                        </table>
                    </div>
                    <% } else { %>
                        <h5>Nessun appello disponibile</h5>
                        <% } %>
            </div>
            <form action="/paginaStudente/appelli/pulisci" method="POST">
                <button type="submit" class="btn btn-default"> << Indietro </button>
            </form>
        </div>
    </div>
</body>

</html>