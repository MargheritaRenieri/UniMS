<!DOCTYPE html>
<html lang="it">

<head>
    <title>
        <%= title %>
    </title>
    <meta charset="UTF-8">
    <!-- to be responsive to mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-png" href="img/logo.png" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS personalizzato -->
    <link rel="stylesheet" href="css/style.css">
    <!-- bootstap scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="js/angular.js"></script>
</head>

<body ng-app="appDocente" ng-controller="controllerDocente">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div>
                    <h3 class="text-center">Welcome
                        <%= user.nome %>.</h3>
                    <div>
                        <ul class="list-unstyled">
                            <li>Username:
                                <%= user.username %>
                            </li>
                            <li>Email:
                                <%= user.email %>
                            </li>
                            <li>First Name:
                                <%= user.nome %>
                            </li>
                            <li>Last Name:
                                <%= user.cognome %>
                            </li>
                            <li>Matricola:
                                <%= user.matricola %>
                            </li>
                        </ul>
                    </div>
                    <a href="/logout" class="btn btn-lg btn-danger btn-block">Log Out</a>
                </div>
            </div>
        </div>
        <div class="row">
            <% if (listaAppelli.length > 0) { %>
                <h4 class="text-center">Appelli inseriti
                </h4>
                <div class="row">
                    <h5 class="col-md-3">Corso:</h5>
                    <h5 class="col-md-3">Aula:</h5>
                    <h5 class="col-md-6">Data e ora:</h5>
                </div>
                <% for(var i=0; i < listaAppelli.length; i++) { %>
                    <div class="col-md-3">
                        <p>
                            <%= listaAppelli[i].idCorso %>
                        </p>
                    </div>
                    <div class=" col-md-3">
                        <p>
                            <%= listaAppelli[i].aula %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <%= listaAppelli[i].data %>
                        </p>
                    </div>
                    <% } %>
                        <% } %>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h4 class="text-center">Aggiungi appello</h4>
                <form action="/paginaDocente/nuovoAppello" method="POST">
                    <select ng-model="idCorso" class="form-control ">  
                                <option value=" " disabled selected hidden>Corso</option>
                                <% corsi.forEach(function(corso){%>
                                    <option value=<%=corso.codice%>> <%= corso.nome %> </option>
                                <% })%>
                        </select>
                    <input readonly value="{{idCorso}}" type="text " name="idCorso" placeholder="Corso" required="required" class="form-control"
                    />
                    <input type="datetime-local" name="data" placeholder="data e ora" required="required" class="form-control" />
                    <input type="text" name="aula" placeholder="aula esame" required="required" class="form-control" />
                    <button type="submit" class="btn btn-lg btn-success btn-block ">OK</button>
                </form>
            </div>
            <div class="col-md-4">
                <h4 class="text-center">Modifica appello</h4>
                <form action="/paginaDocente/modificaAppello" method="POST">
                    <input readonly value="<%=listaAppelli[0].idCorso%>" type="text " name="idCorso" required="required" class="form-control"
                    />
                    <input type="datetime-local" name="data" placeholder="data e ora" required="required" class="form-control" />
                    <input type="text" name="aula" placeholder="aula esame" required="required" class="form-control" />
                    <button type="submit" class="btn btn-lg btn-success btn-block ">OK</button>
                </form>
            </div>
            <div class="col-md-4">
                <h4 class="text-center">Elimina appello </h4>
            </div>
        </div>
    </div>
</body>

</html>