<!DOCTYPE html>
<html lang="it">

<head>
    <title>
        Docente
    </title>
    <meta charset="UTF-8">
    <!-- to be responsive to mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-png" href="img/logo.png" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS personalizzato -->
    <link rel="stylesheet" href="css/style.css">
    <!-- bootstap scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="js/angular.js"></script>
</head>

<body ng-app="appDocente" ng-controller="controllerDocente">
    <div class="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-4 col-md-offset-4">
                    <form>
                        <div id="contact-form" class="form-container" align="center" data-form-container>
                            <div class="row">
                                <h2 class="text-center"><span>Benvenuto
                                <strong><%= user.nome %>!</strong></span></h2>
                                <hr />
                                <div class="image" align="center">
                                    <img class="image-circle img-rounded img-responsive" src="img/avatar.png" alt="avatar docente">
                                </div>
                                <div class="col-xs-12" align="center">
                                    <ul class="list-group">
                                        <li class="list-group-item "><strong>Username:</strong>
                                            <%= user.username %>
                                        </li>
                                        <li class="list-group-item"><strong>Email:</strong>
                                            <%= user.email %>
                                        </li>
                                        <li class="list-group-item"><strong>Nome:</strong>
                                            <%= user.nome %>
                                        </li>
                                        <li class="list-group-item"><strong>Cognome:</strong>
                                            <%= user.cognome %>
                                        </li>
                                        <li class="list-group-item"><strong>Matricola:</strong>
                                            <%= user.matricola %>
                                        </li>
                                    </ul>

                                </div>
                                <button type="button" ng-click="ShowHide3()" class="btn btn-sm  btn-info"><strong> {{activityA}} Appelli</strong></button>
                                <br><br>
                                <a href="/logout" class="btn btn-sm  btn-info" role="button"><strong>Log Out</strong></a>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" ng-show="IsVisible3">
            <form>
                <div id="contact-form" class="form-container" align="center" data-form-container>
                    <div class="row">
                        <div class="col-md-12 col-sm-75 ">
                            <% if (listaAppelli.length > 0) { %>
                                <h3 class="text-center"><span><strong>Appelli inseriti</strong></span>
                                </h3>
                                <hr />
                                <div class="row">
                                    <h5 class="col-md-3"><strong>Corso:</strong></h5>
                                    <h5 class="col-md-3 text-center"><strong>Aula:</strong></h5>
                                    <h5 class="col-md-4 text center"><strong>Data e ora:</strong></h5>
                                </div>
                                <% for(var i=0; i < listaAppelli.length; i++) { %>
                                    <div class="col-md-3">
                                        <p>
                                            <%= listaAppelli[i].idCorso %>
                                        </p>
                                    </div>
                                    <div class=" col-md-3">
                                        <p>
                                            <%= listaAppelli[i].aula %>
                                        </p>
                                    </div>
                                    <div class="col-md-2">
                                        <p>
                                            <%= listaAppelli[i].data %>
                                        </p>
                                    </div>
                                    <div class="col-md-2">
                                        <p>
                                            <%= listaAppelli[i].ora %>
                                        </p>
                                    </div>
                                    <div class="col-md-2">
                                        <button ng-model="idAppello" ng-click="cliccami('<%= listaAppelli[i]._id %>')" class="btn btn-sm  btn-info" name="updateB"><strong>Modifica</strong></button>
                                        <button ng-model="idAppelloE" ng-click="cliccamiE('<%= listaAppelli[i]._id %>')" class="btn btn-sm  btn-info" name="removeB"><strong>Elimina</strong></button><br><br>

                                        <form action="/paginaDocente/appello" method="POST">
                                            <input hidden value="<%= listaAppelli[i]._id %>" name="gestisciAppelli">
                                            <a role="button" type="submit" class="btn btn-sm  btn-info" href="#nuovo"><strong>Vedi iscritti</strong></a><br><br>
                                        </form>
                                    </div>
                                    <% } %>
                                        <% } %>
                        </div>

                    </div>
            </form>
            <br>

            <form>
                <div id="contact-form" class="form-container" align="center" data-form-container>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="col-md-6">
                                <h3 class="text-center"><strong>Aggiungi appello</strong></h3>
                                <hr/>
                                <form action="/paginaDocente/nuovoAppello" method="POST">

                                    <select ng-model="idCorso" class="form-control ">  
                                <option value=" " disabled selected hidden>Corso</option>
                                <% corsi.forEach(function(corso){%>
                                    <option value=<%=corso.codice%>> <%= corso.nome %> </option>
                                <% })%>
                        </select>
                                    <input readonly value="{{idCorso}}" type="hidden" name="idCorso" placeholder="idCorso" required="required" class="form-control"
                                    /><br>
                                    <input type="date" name="data" placeholder="data" required="required" class="form-control" /><br>
                                    <input type="time" name="ora" placeholder="ora" required="required" class="form-control" /><br>
                                    <input type="text" name="aula" placeholder="aula esame" required="required" class="form-control" /><br>
                                    <button type="submit" class="btn btn-md btn-info " ng-show="IsVisible3">OK</button>
                                </form>
                            </div>

                            <div class="col-md-6">
                                <h3 class="text-center"><strong>Modifica appello</strong></h3>
                                <hr/>
                                <form action="/paginaDocente/aggiornaAppello" method="POST">
                                    <input readonly value="{{idAppello}}" type="text " name="_id" placeholder="idAppello" required="required" class="form-control"
                                    /><br>
                                    <input type="date" name="data" placeholder="data" required="required" class="form-control" /><br>
                                    <input type="time" name="ora" placeholder="ora" required="required" class="form-control" /><br>
                                    <input type="text" name="aula" placeholder="aula" required="required" class="form-control" /><br>
                                    <button align: "center" type="submit" class="btn btn-md btn-info " name="updateB" ng-show="IsVisible3">OK</button>
                                </form>
                            </div>
                            <div class="col-md-6">
                                <h3 class="text-center"><strong>Elimina appello</strong> </h3>
                                <hr />
                                <form action="/paginaDocente/eliminaAppello" method="POST">
                                    <input readonly value="{{idAppelloE}}" type="text " name="_id" placeholder="idAppello" required="required" class="form-control"
                                    /><br>
                                    <button align: "center" type="submit" class="btn btn-md btn-info " name="removeB" ng-show="IsVisible3">OK</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            </div>
        </div>

</body>

</html>