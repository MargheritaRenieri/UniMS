<!doctype html>
<html lang="it">

<head>
    <title>Registrazione</title>
    <meta charset="UTF-8">
    <!-- to be responsive to mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-png" href="img/logo.png" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS personalizzato -->
    <link rel="stylesheet" href="css/style.css">
    <!-- bootstap scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="js/angular.js"></script>
</head>

<body>
    <div class="container">
        <div class="col-xs-2">
            <a href="/"><img src="img/logo.png"></a>
            <a style="color: black" href="/#area_personale">
                <p>Hai già un account?</p>
            </a>
        </div>
        <div class="col-xs-10">
            <% if (message) { %>
                <div>
                    <h5 class="text-center text-danger">
                        <%= message %>
                    </h5>
                </div>
                <% } %>
                    <h2 class="well-personal">Registrazione Studente</h2>
                    <div class="col-lg-12 well-personal">
                        <div class="row">
                            <form action="/registrazione" method="POST">
                                <div class="col-sm-12" ng-app="appRegistrazione" ng-controller="controllerRegistrazione">
                                    <div class="row">
                                        <div class="col-sm-6 form-group">
                                            <label>Nome</label>
                                            <input name="nome" type="text" class="form-control" ng-model="nome" required="required" autofocus>                                            </div>
                                        <div class="col-sm-6 form-group">
                                            <label>Cognome</label>
                                            <input name="cognome" type="text" class="form-control" ng-model="cognome" required="required">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4 form-group">
                                            <label>Username</label>
                                            <input name="username" type="text" class="form-control" ng-model="username" required="required" readonly>
                                        </div>
                                        <div class="col-sm-3 form-group">
                                            <label>Ottieni il tuo username!</label>
                                            <button type="button" class="btn btn-md btn-info" ng-click="generaUsername()">Genera</button>
                                        </div>
                                        <div class="col-sm-5 form-group">
                                            <label>Password</label>
                                            <input name="password" type="password" class="form-control" ng-model="password" required="required">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Indirizzo</label>
                                        <textarea name="indirizzo" class="form-control" ng-model="indirizzo"></textarea>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4 form-group">
                                            <label>Città</label>
                                            <input name="città" type="text" class="form-control" ng-model="città">
                                        </div>
                                        <div class="col-sm-4 form-group">
                                            <label>Stato</label>
                                            <input name="stato" type="text" class="form-control" ng-model="stato">
                                        </div>
                                        <div class="col-sm-4 form-group">
                                            <label>CAP</label>
                                            <input name="cap" type="text" class="form-control" ng-model="cap">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 form-group">
                                            <label>Data Nascita</label>
                                            <input name="dataDiNascita" type="date" class="form-control" ng-model="dataDiNascita" required="required">
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <label>Cellulare</label>
                                            <input name="telefono" type="text" class="form-control" ng-model="telefono">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Email Personale</label>
                                        <input name="email" type="email" class="form-control" ng-model="email" required="required">
                                    </div>
                                    <div class="form-group">
                                        <label>Corso di Laurea</label>
                                        <select name="facoltà" class="form-control">
                                            <% facoltà.forEach(function(facoltà){%>
                                                <option value=<%=facoltà.codice%>> <%= facoltà.nome %></option>
                                            <% })%>
                                            </select>
                                    </div>
                                    <button type="submit" class="btn btn-lg btn-info">Invia</button>
                                </div>
                            </form>
                        </div>
                    </div>
        </div>
    </div>
</body>

</html>